<% if node['exabgp']['source_version'].to_f >= 4.0 %>
<% if @enable_hubot -%>
process hubot {
  encoder json;
  run /etc/exabgp/neighbor-changes.rb;
}
<% end %>
<% if @enable_exazk && @exazk_routes.any? -%>
process announce-routes {
  encoder json;
  run /etc/exabgp/exazk.rb;
}
<% end %>
<% if @enable_exporter -%>
process exabgp_exporter {
  run /opt/exabgp_exporter/exabgp_exporter --log.format="logger:stderr?json=true" stream;
  encoder json;
}
<% end %>
<% if @neighbor_ipv4 %>
neighbor <%= @neighbor_ipv4 %> {
  description "Upstream IPv4 provider";
  router-id <%= @router_id %>;
  local-address <%= @local_address_ipv4 %>;
  local-as <%= @local_as %>;
  peer-as <%= @peer_as %>;
  hold-time <%= @hold_time %>;
  family {
    ipv6 unicast;
    ipv4 unicast;
  }

  <% if @enable_ipv4_static_route -%>
  static {
    <% @route_ipv4.each do |ip| %>
    route <%= ip %> {
      next-hop <%= exabgp_next_hop(ip) %>;
      <% if @local_preference %>
      local-preference <%= @local_preference %>;
      <% end %>
      community [<%= @community %>];
    }
    <% end %>
  }
  <% end -%>

  <% if @enable_hubot -%>
  api hubot-ipv4 {
    processes [ hubot ];
    neighbor-changes;
  }
  <% end %>
  <% if @enable_exazk && @exazk_routes.any? -%>
  api announce-routes-ipv4 {
    processes [announce-routes];
  }
  <% end %>
}
<% end %>

<% if @neighbor_ipv6 %>
template {
  neighbor upstreams {
    description "Upstream IPv6 provider";
    router-id <%= @router_id %>;
    local-address <%= @local_address_ipv6 %>;
    local-as <%= @local_as %>;
    peer-as <%= @peer_as %>;
    hold-time <%= @hold_time %>;
    family {
      ipv6 unicast;
      ipv4 unicast;
    }

    static {
      <% @route_ipv6.each do |ip| %>
      route <%= ip %> {
        next-hop <%= exabgp_next_hop(ip) %>;
        <% if @local_preference %>
        local-preference <%= @local_preference %>;
        <% end %>
        community [<%= @community %>];
      }
      <% end %>
    }

    <% if @enable_exazk && @exazk_routes.any? -%>
    api announce-routes-ipv6 {
      processes [announce-routes];
    }
    <% end %>
    <% if @enable_exporter -%>
    api logging {
      processes [ exabgp_exporter ];
      neighbor-changes;
      signal;
      receive {
        parsed;
        notification;
        update;
        refresh;
      }
      send {
        parsed;
        notification;
        update;
        refresh;
      }
    }
    <% end %>
  }
}
<% if @neighbor_ipv6.is_a?(String) %>
neighbor <%= @neighbor_ipv6 %> {
  inherit upstreams;
}
<% else %>
<% @neighbor_ipv6.each do |neighbor| %>
neighbor <%= neighbor %> {
  inherit upstreams;
}
<% end %>
<% end %>
<% end %>
<% else %>
<% if @neighbor_ipv4 %>
neighbor <%= @neighbor_ipv4 %> {
  description "Upstream IPv4 provider";
  router-id <%= @router_id %>;
  local-address <%= @local_address_ipv4 %>;
  local-as <%= @local_as %>;
  peer-as <%= @peer_as %>;
  hold-time <%= @hold_time %>;
  family {
    ipv6 unicast;
    ipv4 unicast;
  }

  <% if @enable_ipv4_static_route -%>
  static {
    <% @route_ipv4.each do |ip| %>
    route <%= ip %> {
      next-hop <%= exabgp_next_hop(ip) %>;
      <% if @local_preference %>
      local-preference <%= @local_preference %>;
      <% end %>
      community [<%= @community %>];
    }
    <% end %>
  }
  <% end -%>
  <% if @enable_hubot -%>
  process hubot {
    encoder json;
    neighbor-changes;
    run /etc/exabgp/neighbor-changes.rb;
  }
  <% end %>
  <% if @enable_exazk && @exazk_routes.any? -%>
  process announce-routes {
    run /etc/exabgp/exazk.rb;
  }
  <% end %>
}
<% end %>

<% if @neighbor_ipv6 %>
group upstreams {
  description "Upstream IPv6 provider";
  router-id <%= @router_id %>;
  local-address <%= @local_address_ipv6 %>;
  local-as <%= @local_as %>;
  peer-as <%= @peer_as %>;
  hold-time <%= @hold_time %>;
  family {
    ipv6 unicast;
    ipv4 unicast;
  }

  static {
    <% @route_ipv6.each do |ip| %>
    route <%= ip %> {
      next-hop <%= exabgp_next_hop(ip) %>;
      <% if @local_preference %>
      local-preference <%= @local_preference %>;
      <% end %>
      community [<%= @community %>];
    }
    <% end %>
  }

  <% if @enable_exazk && @exazk_routes.any? -%>
  process announce-routes {
    run /etc/exabgp/exazk.rb;
  }
  <% end %>

  <% if @neighbor_ipv6.is_a?(String) %>
  neighbor <%= @neighbor_ipv6 %> {
  }
  <% else %>
  <% @neighbor_ipv6.each do |neighbor| %>
  neighbor <%= neighbor %> {
  }
  <% end %>
  <% end %>
}
<% end %>
<% end %>
